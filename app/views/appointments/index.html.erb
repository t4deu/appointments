<p id="notice"><%= notice %></p>

<h1>Listing Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Consumer</th>
      <th>Provider</th>
      <th>Service</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.client_id %></td>
        <td><%= appointment.provider_id %></td>
        <td><%= appointment.service_id %></td>
        <td><%= appointment.start_at %></td>
        <td><%= appointment.end_at %></td>
        <td><%= appointment.notes %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

